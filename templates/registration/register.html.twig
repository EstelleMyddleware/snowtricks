{% extends 'base.html.twig' %}

{% block title %}{{ 'register' | trans }}{% endblock %}

{% block body %}
    <section class="container-fluid background-layout-fixed vh-85">
        <div class="row justify-content-center">
            <div class="col-lg-4 mt-5">
                <div class="card p-5 shadow">
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <h1 class="align-self-center">{{ 'registration' | trans }}</h1>

                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.username) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark mt-3">{{ 'create_account' | trans }}</button>
                        </div>
                    {{ form_end(registrationForm) }}
                    <div class="text-center mt-3">
                        <a href="{{path('app_login')}}">{{ 'account_already' | trans }}?</a> 
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
