{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_your_password' | trans }}{% endblock %}

{% block body %}
    <section class="background-layout-fixed">
        <div class="container-fluid vh-90">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mt-5 p-5">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <h1>{{ 'reset_your_password' | trans }}</h1>
                        {{ form_start(requestForm) }}
                            {{ form_row(requestForm.email) }}
                            <div class="mb-3">
                                <small class="form-text">
                                {{ 'reset_password_email_link' | trans }}
                                </small>
                            </div>
                            <button class="btn btn-dark">{{ 'submit' | trans }}</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
