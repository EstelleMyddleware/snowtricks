{% block body %}
    <aside class="text-center">
        <ul class="medias d-flex justify-content-around"
            {# data-index="{{ images|length > 0 ? images|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(images.vars.prototype)|e('html_attr') }}" #}
        >
            {% for image in images %}
                <li class="list-unstyled">
                    <img src="{{ image.path }}" alt="trick"/>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {{ include('image/_delete_form.html.twig') }}
                    {% endif %}
                </li>
            {% else %}
                <li class="list-unstyled">{{ 'empty' | trans }}</li>
            {% endfor %}
        </ul>
        <a href="{{ path('app_image_new', {'trick' : trick.id}) }}" role="button" class="btn btn-primary mt-2 add_item_link" data-collection-holder-class="images">{{ 'create_new' | trans }}</a>
    </aside>
{% endblock %}
