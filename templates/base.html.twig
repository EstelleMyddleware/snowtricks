<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{absolute_url(asset('build/images/favicon.ico'))}}">
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="h-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}">Snowtricks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="{{ path('app_home') }}" class="navbar-link text-decoration-none me-3">Accueil</a></li>
                        <li class="nav-item"><a href="{{ path('app_home') }}" class="navbar-link text-decoration-none me-3">Figures</a></li>
                        <li class="nav-item"><a href="{{ path('app_login') }}" class="navbar-link text-decoration-none me-3">Connexion</a></li>
                        <li class="nav-item"><a href="{{ path('app_register') }}" class="navbar-link text-decoration-none me-3">Inscription</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <main class="flex-shrink-0">
        {% block body %}{% endblock %}
        </main>
        <footer class="mt-auto py-3 bg-dark">
            <div class="container">
                <p class="text-muted">Copyright - {{ "now"|date("Y") }}</p>
            </div>
        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
